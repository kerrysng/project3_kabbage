
<script id="card-template" type="handlebars">
  <header>
    <h3>{{user.first_name}}</h3>

    <h3>{{user.last_name}}</h3>

  </header>
  <div class="image">
    <img src="{{image_url}}" alt="">
  </div>
  <div class="text">
    <p>{{body}}</p>
  </div>
  <div class="map">
  </div>
  <footer>
    <h5 class="dashboard location">{{city}} {{country}}</h5>

    <form action="/api/moods/" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
      <input type="hidden" name="card_id" value="{{id}}" id="cardID">
      <button class="mood-btn btn-success">Save</button>
    </form>

</footer>


</script>
